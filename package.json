{
	"name": "monorepo",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"db:studio": "pnpm --filter db db:studio",
		"db:push": "pnpm --filter db db:push",
		"db:generate": "pnpm --filter db postinstall"
	},
	"devDependencies": {
		"prettier": "^3.2.5",
		"turbo": "^1.13.3"
	},
	"dependencies": {
		"bun-types": "^1.1.9"
	}
}
